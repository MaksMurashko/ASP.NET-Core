            @Html.DisplayFor(model => model.Material.MaterialName)
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated && (User.IsInRole("SuperAdmin") || User.IsInRole("Admin")))
    {
        <span>  <a asp-action="Edit" asp-route-id="@Model?.ProductId">Изменить</a> |</span>
    }
    <a asp-action="Index">Назад</a>
</div>
